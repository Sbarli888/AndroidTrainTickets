<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="0.02">

        <TextView
            android:id="@+id/textView_listacomboio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/listacomboio"
            android:textColor="@color/colorDarkText"
            android:textSize="@dimen/activity_text_title"/>
    </RelativeLayout>

    <android.support.v7.widget.GridLayout
        app:columnCount="3"
        app:orientation="horizontal"
        app:rowCount="1"
        android:layout_width="match_parent"
        android:layout_height="40dp">


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            app:layout_column="0"
            app:layout_columnWeight="1"
            android:layout_width="100dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView_listaSaida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/listasaida"
                android:textColor="@color/colorDarkText"
                android:textSize="@dimen/activity_text_title"/>
        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            app:layout_column="1"
            app:layout_columnWeight="1"
            android:layout_width="100dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView_listaChegada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/listachegada"
                android:textColor="@color/colorDarkText"
                android:textSize="@dimen/activity_text_title"/>
        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            app:layout_column="2"
            app:layout_columnWeight="1"
            android:layout_width="100dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView_listaDuracao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/listaduracao"
                android:textColor="@color/colorDarkText"
                android:textSize="@dimen/activity_text_title"/>
        </RelativeLayout>


    </android.support.v7.widget.GridLayout>

</LinearLayout>