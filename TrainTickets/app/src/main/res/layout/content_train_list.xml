<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#adc5ed"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="6dp"
        android:background="#d9dbdd" />

    <TextView
        android:id="@+id/train_ticket_title_txt"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="@color/colorPrimary"
        android:ems="10"
        android:paddingLeft="10dp"
        android:text="@string/train_ticket_title_txt"
        android:textColor="@color/QRCodeWhite"
        android:textSize="@dimen/text_form_title"
        android:textStyle="bold"
        tools:ignore="RtlHardcoded,RtlSymmetry" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#d9dbdd" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/train_list_departure_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="@string/train_list_departure_tv"
            android:textColor="@color/colorDarkText"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded,RtlSymmetry" />

        <TextView
            android:id="@+id/train_list_arrival_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="@string/train_list_arrival_tv"
            android:textColor="@color/colorDarkText"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded,RtlSymmetry" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/train_list_departure_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="@string/train_list_departure_txt"
            android:textColor="@color/colorDarkText"
            tools:ignore="RtlHardcoded,RtlSymmetry" />


        <TextView
            android:id="@+id/train_list_arrival_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="@string/train_list_arrival_txt"
            android:textColor="@color/colorDarkText"
            tools:ignore="RtlHardcoded,RtlSymmetry" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#d9dbdd" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="14">

        <TextView
            android:id="@+id/train_list_duration_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:paddingLeft="10dp"
            android:text="@string/train_list_duration_tv"
            android:textColor="@color/colorDarkText"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded,RtlSymmetry" />


        <TextView
            android:id="@+id/train_list_duration_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingLeft="10dp"
            android:text="@string/train_list_duration_txt"
            android:textColor="@color/colorDarkText"
            tools:ignore="RtlHardcoded,RtlSymmetry" />

        <TextView
            android:id="@+id/train_list_id_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:paddingLeft="10dp"
            android:text="@string/train_ticket_id_tv"
            android:textColor="@color/colorDarkText"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded,RtlSymmetry" />

        <TextView
            android:id="@+id/train_ticket_id_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingLeft="10dp"
            android:text="@string/train_list_id_txt"
            android:textColor="@color/colorDarkText"
            tools:ignore="RtlHardcoded,RtlSymmetry" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="6dp"
        android:background="#d9dbdd" />

</LinearLayout>